{
  "name": "mi-app-lectura",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "docx": "^9.3.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "firebase": "^12.4.0",
    "framer-motion": "^12.23.3",
    "jspdf": "^3.0.3",
    "lodash": "^4.17.21",
    "mammoth": "^1.9.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-pdf": "^9.1.1",
    "react-router-dom": "^7.9.5",
    "react-scripts": "^5.0.1",
    "react-virtuoso": "^4.13.0",
    "recharts": "^3.4.1",
    "styled-components": "^6.1.17",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "scripts": {
    "start": "PORT=3000 react-app-rewired start",
    "start:windows": "set PORT=3000&& react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --silent --maxWorkers=2",
    "eject": "react-scripts eject",
    "server": "cd server && node index.js",
    "server:windows": "cd server && set BACKEND_PORT=3001&& node index.js",
    "dev": "concurrently \"npm run start:windows\" \"npm run server:windows\"",
    "dev:unix": "concurrently \"npm run start\" \"npm run server\"",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "smoke:backend": "node test-backend.js",
    "kill-ports": "npx kill-port 3000 3001",
    "restart": "npm run kill-ports && npm run dev",
    "restart:windows": "npm run kill-ports && concurrently \"npm run server:windows\" \"npm run start:windows\"",
    "clean-restart": "npm run kill-ports && rmdir /s /q node_modules && del /q package-lock.json && npm ci && npm run dev",
    "debug:backend": "cd server && set DEBUG=*&& node index.js",
    "debug:api": "node scripts/test-api-performance.js",
    "monitor": "concurrently \"npm run start:windows\" \"npm run debug:backend\"",
    "debug": "npm run monitor",
    "clean:legacy": "echo Limpieza de archivos legacy aplicada el 2025-10-11. Consulta ARQUITECTURA.md para el listado y estado actual.",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:deploy:hosting": "npm run build && firebase deploy --only hosting",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:emulators": "firebase emulators:start",
    "firebase:init": "firebase init"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "pdfjs-dist/legacy/build/pdf.js": "<rootDir>/fileMock.js",
      "pdfjs-dist/legacy/build/pdf.worker.entry": "<rootDir>/fileMock.js",
      "framer-motion": "<rootDir>/src/__mocks__/framer-motion.js",
      "^src/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "!src/__mocks__/**",
      "!src/*_backup.js",
      "!src/**/*_backup.js",
      "!src/*_old.js",
      "!src/*_original.js",
      "!src/*_debug.js",
      "!src/*_fixed.js",
      "!src/*_duplicado.js",
      "!src/**/*_backup_*.js",
      "!src/**/*_duplicado.js",
      "!src/**/*_clean.js",
      "!src/ChatIA_backup.js",
      "!src/components/LecturaInteractiva_backup_before_web.js",
      "!src/components/LecturaInteractiva_fixed.js",
      "!src/components/SistemaEvaluacion_clean.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,jsx}",
      "<rootDir>/src/**/*.test.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "copy-webpack-plugin": "^13.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-axe": "^10.0.0",
    "jest-fetch-mock": "^3.0.3",
    "msw": "^1.3.5",
    "react-test-renderer": "^18.3.1"
  }
}
