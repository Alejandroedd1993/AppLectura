
# ========================================
# FRONTEND (React) - Variables de entorno
# ========================================
# Este archivo es para el FRONTEND.
# - Solo las variables con prefijo REACT_APP_ son accesibles desde el código React.
# - Variables del BACKEND (claves de IA, Tavily, etc.) van en server/.env (ver server/.env.example).

# Puerto para el frontend (por defecto 3000)
REACT_APP_PORT=3000

# Puerto del backend para el proxy de desarrollo (src/setupProxy.js)
BACKEND_PORT=3001

# URL directa del backend (opcional). En desarrollo normalmente se usa /api vía proxy.
REACT_APP_BACKEND_URL=http://localhost:3001

# Ajustes de desarrollo (opcionales)
BROWSER=none
FAST_REFRESH=true
GENERATE_SOURCEMAP=false

# ========================================
# Firebase (Frontend)
# ========================================

# Firebase API Key (obtener de Firebase Console > Project Settings)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key-here

# Firebase Auth Domain
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
REACT_APP_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Firebase App ID
REACT_APP_FIREBASE_APP_ID=1:your-app-id:web:your-web-app-id

# (Opcional) Usar emuladores Firebase para desarrollo local
# REACT_APP_USE_FIREBASE_EMULATOR=true

